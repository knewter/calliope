!!! 5
  %head
    %title= title
    %meta{charset: "UTF-8"}/
    %meta{content: "width=device-width", "maximum-scale" => "1.0,", name: "viewport", "user-scalable" => "0,"}/
    /[if IE]
      <script src="/javascripts/html5.js" type="text/javascript"></script>
    %link{href: "/static/stylesheets/application.css", media: "screen", rel: "stylesheet", type: "text/css"}/
    %link{href: "http://fonts.googleapis.com/css?family=Raleway:800,200|Merriweather:400,400italic", rel: "stylesheet", type: "text/css"}/
  %body
    %header
      .container
        %h1
          %a{href: "/"}= title
        .session
          = unless current_user do
          %a.button.signinout{href: "/authentication/new"} Sign In
          = else
          %a.username{href: "/user/#{current_user.id}"}= current_user.full_name
          %a.button.signinout{href: "/authentication/destroy"} Sign Out
          = end
    .container
      = if error do
        .flash.failure
          %p= error
      = end
      %section
        = lc { id, headline, content } inlist posts do
          %article.blog_post
            %h1
              %a{href: "/posts/#{id}"}= headline
            %p
              = content
            %a.button.readmore{href: "/post/#{id}"} Read More
    %footer
      .container
        %p
          An experiment by
          %a{href: "http://www.github.com/nurugger07", target: "_blank"} Johnny Winn
